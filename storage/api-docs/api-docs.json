{
    "openapi": "3.0.0",
    "info": {
        "title": "My the best API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": ""
        }
    ],
    "paths": {
        "/cities/by-state/{state}": {
            "get": {
                "tags": [
                    "Cities"
                ],
                "operationId": "App\\Http\\Controllers\\CityController::allCities",
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "allOf": [
                                                {
                                                    "$ref": "#/components/schemas/CityResource"
                                                }
                                            ]
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/": {
            "get": {
                "description": "Status da API",
                "responses": {
                    "200": {
                        "description": "Status da API"
                    }
                }
            }
        },
        "/states": {
            "get": {
                "tags": [
                    "States"
                ],
                "operationId": "App\\Http\\Controllers\\StateController::allStates",
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "allOf": [
                                                {
                                                    "$ref": "#/components/schemas/StateResource"
                                                }
                                            ]
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users": {
            "post": {
                "tags": [
                    "Users"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserCreatorRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "example": "Usuário criado com sucesso"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "example": "Mensagem de error"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{user}": {
            "put": {
                "tags": [
                    "Users"
                ],
                "parameters": [
                    {
                        "name": "user",
                        "in": "path",
                        "required": true,
                        "example": "2"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserUpdaterRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "example": "Usuário atualizado com sucesso"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "example": "Mensagem de error"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "UserStatus": {
                "type": "string",
                "enum": [
                    "ACTIVE",
                    "INACTIVE"
                ]
            },
            "UserType": {
                "type": "string",
                "enum": [
                    "COMMERCIAL",
                    "PHARMACY",
                    "SUPPLIER"
                ]
            },
            "ValidationResponse": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "The given data was invalid."
                    },
                    "errors": {
                        "type": "array",
                        "items": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "example": "Campo teste é obrigatório"
                        }
                    }
                },
                "type": "object"
            },
            "UserCreatorRequest": {
                "title": "User form request",
                "required": [
                    "name",
                    "email",
                    "username",
                    "profile_id",
                    "type",
                    "status"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Usuário Teste"
                    },
                    "email": {
                        "type": "string",
                        "example": "user01@test.test"
                    },
                    "username": {
                        "type": "string",
                        "example": "user01"
                    },
                    "phone_1": {
                        "type": "string",
                        "example": "(62) 9 9999-9999"
                    },
                    "phone_2": {
                        "type": "string",
                        "example": "(62) 9 9999-9999"
                    },
                    "status": {
                        "$ref": "#/components/schemas/UserStatus"
                    },
                    "type": {
                        "$ref": "#/components/schemas/UserType"
                    },
                    "profile_id": {
                        "type": "integer",
                        "example": "2"
                    }
                },
                "type": "object"
            },
            "UserUpdaterRequest": {
                "title": "User update form request",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Usuário Teste"
                    },
                    "email": {
                        "type": "string",
                        "example": "user01@test.test"
                    },
                    "username": {
                        "type": "string",
                        "example": "user01"
                    },
                    "phone_1": {
                        "type": "string",
                        "example": "(62) 9 9999-9999"
                    },
                    "phone_2": {
                        "type": "string",
                        "example": "(62) 9 9999-9999"
                    },
                    "status": {
                        "$ref": "#/components/schemas/UserStatus"
                    },
                    "type": {
                        "$ref": "#/components/schemas/UserType"
                    },
                    "profile_id": {
                        "type": "integer",
                        "example": "2"
                    }
                },
                "type": "object"
            },
            "CityResource": {
                "title": "City Response",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": "1"
                    },
                    "name": {
                        "type": "string",
                        "example": "Goiânia"
                    },
                    "state": {
                        "$ref": "#/components/schemas/StateResource"
                    }
                },
                "type": "object"
            },
            "StateResource": {
                "title": "State Response",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": "1"
                    },
                    "name": {
                        "type": "string",
                        "example": "Goiás"
                    },
                    "code": {
                        "type": "string",
                        "example": "GO"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "passport": {
                "type": "oauth2",
                "description": "Laravel passport oauth2 security.",
                "in": "header",
                "scheme": "https",
                "flows": {
                    "password": {
                        "authorizationUrl": "http://portal-compras-back.test/oauth/authorize",
                        "tokenUrl": "http://portal-compras-back.test/oauth/token",
                        "refreshUrl": "http://portal-compras-back.test/token/refresh",
                        "scopes": []
                    }
                }
            }
        }
    }
}